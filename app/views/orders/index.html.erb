<% content_for :page_title do %>
<%= render "title" %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="portlet box">
      <div class="dataTables_wrapper form-inline" role="grid">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="trailer_table">
            <thead>
              <tr>
                <th>序号</th>
                <th>客户</th>
                <th>价格</th>
                <th>创建时间</th>
                <th>状态</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |f| %>
                <tr>
                  <td><%= f.no %></td>
                  <td><%= f.customer_name %></td>
                  <td><%= f.price %></td>
                  <td><%= f.created_at.strftime('%m-%d %H:%M:%S') %></td>
                  <td><%= f.status %></td>
                  <td><%= link_to "详情", edit_order_path(f) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @orders %>
        </div>
      </div>
    </div>
  </div>
</div>