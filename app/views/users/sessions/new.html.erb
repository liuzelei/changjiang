<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form") do |f| %>
  <h3 class="form-title">登陆系统</h3>
  <div class="alert alert-danger display-hide">
    <button class="close" data-close="alert"></button>
    <span>
    输入账号和密码. </span>
  </div>
  <div class="form-group">
    <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
    <%= f.label :email, class: "control-label visible-ie8 visible-ie9" %>
    <div class="input-icon">
      <i class="fa fa-user"></i>
      <%= f.email_field :email, autofocus: true, class: "form-control placeholder-no-fix", autocomplete: false, placeholder: "账号" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "control-label visible-ie8 visible-ie9" %>
    <div class="input-icon">
      <i class="fa fa-lock"></i>
      <%= f.password_field :password, autocomplete: "off", class: "form-control placeholder-no-fix", autocomplete: false, placeholder: "密码" %>
    </div>
  </div>
  <div class="form-actions unsticky">
    <button type="submit" class="btn green pull-right">
    登陆 <i class="m-icon-swapright m-icon-white"></i>
    </button>
  </div>
<% end %>