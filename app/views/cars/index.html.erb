<% content_for :page_title do %>
<%= render "title" %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="portlet box">
      <div class="dataTables_wrapper form-inline" role="grid">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover" id="trailer_table">
            <thead>
              <tr>
                <th>型号</th>
                <th>排量</th>
                <th>颜色</th>
                <th>价格</th>
                <th>状态</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @cars.each do |f| %>
                <tr>
                  <td><%= f.model %></td>
                  <td><%= f.cc %></td>
                  <td><%= f.color %></td>
                  <td><%= f.price %></td>
                  <td><%= f.status %></td>
                  <td>
                    <%= link_to "详情", car_path(f) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @cars %>
        </div>
      </div>
    </div>
  </div>
</div>